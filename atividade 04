  /* Um determinado clube de futebol pretende classicar seus atletas em categorias e para isso ele contratou um programador para criar um programa que executasse esta tarefa. Para
            isso o clube criou uma tabela que continha a faixa etária do atleta e sua categoria. A tabela está demontrada abaixo:
            IDADE      CATEGORIA 
            05 a 10     infantil
            11 a 15     juvenil
            16 a 20     junior
            21 a 25     profissional
            Construa um programa que solicite o nome e a idade de um atleta e imprima a sua categoria.*/

            Console.WriteLine("### Classificação de Atletas ### ");

            Console.Write("\nInforme o nome do Atleta: ");
            string nome = Console.ReadLine();

            Console.Write("Infome a idade do Atleta: ");
            int idade = int.Parse(Console.ReadLine());

            if (idade >= 05 && idade <= 10)
            {
                Console.Write($"\nJogador {nome} com a idade de {idade} anos etá na Categoria Infantil.");
            }
            else if (idade >= 11 && idade <= 15)
            {
                Console.Write($"\nJogador {nome} com a idade de {idade} anos etá na Categoria Juvenil.");
            }
            else if (idade >= 16 && idade <= 20)
            {
                Console.Write($"\nJogador {nome} com a idade de {idade} anos etá na Categoria Junior.");
            }
            else if (idade >= 21 && idade <= 25)
            {
                Console.Write($"\nJogador {nome} com a idade de {idade} anos etá na Categoria Profissional.");
            }
            else
            {
                Console.Write("\nNão possui idade para ser atleta.");
            }

            Console.ReadKey();